<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back"
    android:orientation="vertical" >

    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/categrory"
            android:textColor="#000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:hint="descripton"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:textColor="#000"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/Text02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/time"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/EditText01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textColor="#000"
                android:textSize="18sp"
                android:inputType="number"
                android:hint="@string/mins" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/save"
            android:layout_width="80dip"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="80dip"
            android:text="@string/save"
            android:onClick="btnSavePressed"
            android:visibility="visible"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:centerColor = '#191EA8'

            android:background="@drawable/buttonshape"
            android:shadowColor="#191EA8"

            android:shadowRadius="5"/>

        <Button
            android:id="@+id/cancel"
            android:layout_width="80dip"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="40dip"
            android:text="@string/cancel"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:centerColor = '#191EA8'
            android:background="@drawable/buttonshape"
            android:shadowColor="#191EA8"

            android:shadowRadius="5"
            android:visibility="visible"
            android:onClick="btnCancelPressed"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"></LinearLayout>

    <TextView
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="hello"
        android:id="@+id/textView3"
        android:textColor="@color/Peru"
        android:textSize="24dp"
        android:textStyle="normal|italic" />

    <Button

        android:layout_width="120dip"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="0dip"
        android:text="view account"
        android:id="@+id/button3"
        android:onClick="btnViewAccount"
        android:textSize="19dp"
        android:textColor="#ffebedf3"
        android:background="@drawable/layout1"
        android:shadowColor="#ffe44ec5"

        />

</LinearLayout><!-- From: file:/Users/marriema/Desktop/final/app/src/main/res/layout/addnew.xml -->